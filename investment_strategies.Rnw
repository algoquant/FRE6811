add_TA(position_s > 0, on=-1,
       col="lightgreen", border="lightgreen")
add_TA(position_s < 0, on=-1,
       col="lightgrey", border="lightgrey")
legend("top", legend=c(sym_bol, "VWAP strategy"),
       inset=0.1, bg="white", lty=1, lwd=6,
       col=c("orange", "blue"), bty="n")
