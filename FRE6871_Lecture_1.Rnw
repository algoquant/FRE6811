curve(expr=df(x, df1=deg_free[in_dex], df2=3),
      xlim=c(0, 4), xlab="", ylab="", lwd=2, 
      col=col_ors[in_dex], add=as.logical(in_dex-1))
}  # end for
      @
    \column{0.5\textwidth}
